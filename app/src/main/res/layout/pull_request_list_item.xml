<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pull_request_name_text_view"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="Pull Request Name"
        android:textColor="#2f7096"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pull_request_description_text_view"
        android:layout_width="352dp"
        android:layout_height="47dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Description"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pull_request_name_text_view" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pull_request_image_view"
        android:layout_width="72dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        app:civ_border_color="#FFffffff"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pull_request_description_text_view" />

    <TextView
        android:id="@+id/pull_request_username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:text="username"
        android:textColor="#68b7d9"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pull_request_image_view"
        app:layout_constraintTop_toBottomOf="@+id/pull_request_description_text_view" />

    <TextView
        android:id="@+id/pull_request_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#8e9091"
        android:text="Date"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/pull_request_image_view"
        app:layout_constraintTop_toBottomOf="@+id/pull_request_username_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>